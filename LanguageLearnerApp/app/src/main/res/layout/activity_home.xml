<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/TestModeActivity"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:text="Tryb testu"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/LearningModeActivity"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TestModeActivity"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:text="Tryb nauki"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/TeacherModeActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TestModeActivity" />

    <Button
        android:id="@+id/TeacherModeActivity"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LearningModeActivity"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:text="Tryb edycji"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/HelpActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LearningModeActivity" />

    <Button
        android:id="@+id/HelpActivity"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TeacherModeActivity"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:text="Pomoc"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/SettingsActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TeacherModeActivity"/>

    <Button
        android:id="@+id/SettingsActivity"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/HelpActivity"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:text="Ustawienia"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>